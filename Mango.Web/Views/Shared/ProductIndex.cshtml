@model IEnumerable<Mango.Web.Models.ProductDTO>
<br /><br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-info"><i class="fas fa-plus">Create New Product</i></a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.category</td>
                    <td>@((item.price).ToString("c"))</td>
                    <td><a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.productid"><i class="fas fa-edit"></i>Edit</a></td>
                    <td><a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.productid"><i class="fas fa-trash"></i>Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>